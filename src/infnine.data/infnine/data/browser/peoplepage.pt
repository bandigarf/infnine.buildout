    <!-- TODO: List only recent alumni here (date - 1 year) -->
    <div tal:define="people python:[person[1] for person in context.items()
                                    if person[1].meta_type == 'Person'
                                    and person[1].status == 'Alumnus']"
            tal:condition="python: len(people) > 0">
