<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="infnine.data">
<head>
</head>

<body>
<div metal:fill-slot="main">

    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <table class="invisible">
        <tbody>
        <tr>
            <td>
                <img src="photo">
            </td>
            <td>

                <h1 class="documentFirstHeading" tal:replace="context/title" />

                <div tal:content="context/status" />

                <div tal:content="context/position" />

                <div tal:content="context/department" />

                <div>E-Mail: <span tal:content="context/email" /></div>

                <div>Telephone: <span tal:content="context/telephone" /></div>

                <div>Fax: <span tal:content="context/fax" /></div>

                <div>Office: <span tal:content="context/office" /></div>
            </td>
        </tr>
        </tbody>
    </table>

    <div tal:define="text context/publications" tal:condition="python: text != None">
        <h2>Publications</h2>
        <ul tal:define="text context/publications; items python:text.splitlines()" tal:repeat="item items">
            <li>
                <a tal:attributes="href python: context.portal_url() + '/publications/' + item">
                    <span tal:content="python: portal.publications.__getitem__(item).title" />
                </a>
            </li>
        </ul>
    </div>

    <h2>Current Research Projects</h2>
    <div tal:content="context/research_projects_current" />

    <h2>Former Research Projects</h2>
    <div tal:content="context/research_projects_former" />

    <h2>Teaching</h2>
    <div tal:content="context/teaching" />

    <h2>Students</h2>
    <div tal:content="context/students" />

    <h2>Misc</h2>
    <div tal:content="structure context/misc">Misc</div>

    <hr />

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <div metal:use-macro="context/folder_listing/macros/listing" />

    <div tal:replace="structure provider:plone.belowcontentbody" />

</div>
</body>
</html>
